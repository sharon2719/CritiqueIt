<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5e9e7">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Stars Icon -->

    <!-- Submission confirmation text -->

    <ImageView
        android:id="@+id/iv_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="122dp"
        android:src="@drawable/negative" />

    <TextView
        android:id="@+id/tv_review_submitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review has been submitted successfully!"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/irish_grover"
        android:layout_below="@id/iv_stars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Sentiment analysis description -->
    <TextView
        android:id="@+id/tv_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quelle déception! Your review reveals the film’s flaws with a striking clarity. With a confidence score of"
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="@font/irish_grover"
        android:layout_below="@id/tv_review_submitted"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Confidence score text with placeholder -->
    <TextView
        android:id="@+id/tv_confidence_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--%"
        android:textColor="#FFA500"
        android:textSize="18sp"
        android:fontFamily="@font/irish_grover"
        android:layout_below="@id/tv_analysis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Additional help message -->
    <TextView
        android:id="@+id/tv_additional_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your insights guide others to approach with caution—or perhaps save their next cinematic coup de cœur for another time."
        android:textColor="#000000"
        android:textSize="16sp"
        android:fontFamily="@font/irish_grover"
        android:layout_below="@id/tv_confidence_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
